# ASKEW - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# SANITY CMS CONFIGURATION (Required)
# ===========================================
# 1. Go to https://www.sanity.io/manage
# 2. Create a new project or select existing
# 3. Copy Project ID from project settings

NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# For write access (optional, for API mutations)
# Create token in: Project Settings > API > Tokens
SANITY_API_TOKEN=your_token_here

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=

# ===========================================
# EMAIL CONFIGURATION (for contact form)
# ===========================================
# Using Resend.com
RESEND_API_KEY=your_resend_api_key
CONTACT_EMAIL=hello@askew.studio
